<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </table>
  <div class="row">
    <%= link_to edit_user_path(:id),class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
      <h2>New Book</h2>
      <%= form_with model: @book,url: books_path,method: :post do |f| %>
      
      <%= f.label :title %><br>
      <%= f.text_field :title,style: "width:100%" %><br>
      
      <%= f.label :opinion %><br>
      <%= f.text_area :body,style: "width:100%" %><br>
      
      <input type="submit" value="Create Book" class="btn btn-success">
        
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <tbody>
        <% @book.each do |book| %>
        <tr>
          <td>
           <%= link_to user_path(book.user_id) do %>
             <%= image_tag book.user.get_profile_image(100,100) %><br>
             <%= book.user.name %>
           <% end %>
          </td>
          <td>
           <%= link_to book_path(book.id) do %>
             <%= book.title %>
           <% end %>
          </td>
          <td>
           <%= book.body %>
          </td>
          <td>
           <%= link_to edit_user_path(book.user_id) do %>
            <button type="button" class="btn btn-success btn-sm">Edit</button>
           <% end %>
          </td>
          <td>
           <%= link_to book_path(book.id),method: :delete do %>
            <button type="button" class="btn btn-danger btn-sm">destroy</button>
           <% end %>
          </td>
        </tr>
        <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>