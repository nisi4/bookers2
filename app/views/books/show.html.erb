<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "list",book: @book,user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <tbody>
        <tr>
          <td>
           <%= link_to user_path(@books.user_id) do %>
             <%= image_tag @books.user.get_profile_image(100,100) %><br>
             <%= @books.user.name %>
           <% end %>
          </td>
          <td>
           <%= link_to book_path(@books.id) do %>
             <%= @books.title %>
           <% end %>
          </td>
          <td>
           <%= @books.body %>
          </td>
          <% if @books.user_id == current_user.id %>
              <td>
               <%= link_to edit_book_path(@books.id) do %>
                <button type="button" class="btn btn-success btn-sm">Edit</button>
               <% end %>
              </td>
              <td>
               <%= link_to book_path(@books.id),method: :delete do %>
                <button type="button" class="btn btn-danger btn-sm">destroy</button>
               <% end %>
              </td>
          <% else %>
              <td></td>
              <td></td>
          <% end %>
        </tr>
       </tbody>
      </table>
    </div>
  </div>
</div>